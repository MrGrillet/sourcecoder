<div class="row">
	<div class="col-md-9">
		<h1><%= User.find(@application.user_id)[:first_name] %>'s application</h1>
		<small>for <%= Job.find(@application.job_id)[:title] %></small>
	</div>
</div>
<% if @application.youtube_url.present? %>
	<div class="row">
		<div class="col-md-9">
			<iframe width="100%" height="415" src="https://www.youtube.com/embed/<%= @application.youtube_url %>?rel=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-md-9">
		<h3>What <%= User.find(@application.user_id)[:first_name] %> had to say...</h3>
		<%= simple_format(@application.application_body) %>
	</div>
</div>
<div class="row">
	<div class="col-md-9">
		<% if current_user.id == @application.user_id %>
			<%= link_to 'Edit', edit_application_path(@application) %> | 
			<%= link_to 'Delete', application_path(@application), class: "btn btn-xs btn-danger" , method: :delete, data: {confirm: "Are you sure?"} %> | 
		<% end %>	
		<%= link_to "Cancel and return to all applications", applications_path %>
	</div>
</div>

