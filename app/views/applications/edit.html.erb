<div class="row">
	<div class="col-md-10 col-md-offset-2"> 
		<h1>edit application</h1>
		<p>User ID: <%= current_user.id %></p>
		<%= render 'shared/errors', obj: @application %>
	</div>
</div>

<div class="row">
	<div class="col-md-12"> 
		<%= form_for(@application, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :description %></div>
			<div class="col-sm-10 "><%= f.text_area :application_body, rows: 10, class: "form-control", placeholder: "What will you bring to this role?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :YouTube_Code %></div>
			<div class="col-sm-10 "><%= f.text_field :youtube_url, rows: 10, class: "form-control", placeholder: "dQw4w9WgXcQ", autofocus: true  %></div>
		</div>
		<div class="form-group" >
			<div class="col-sm-10 col-sm-offset-2">
				<%= f.submit "Preview application", class: "btn btn-lg btn-success" %>    
				<%= link_to "Cancel and return to all applications", applications_path %></div>
		</div>
	<% end %>
	</div>
</div>