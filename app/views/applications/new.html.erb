<div class="row">
	<div class="col-md-10"> 
		<h1>New application for <%= @job_title %></h1>
		<%= render 'shared/errors', obj: @application %>
	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<h4>Job Description</h4>
		<%= simple_format(@job_description) %>
	</div>
	<div class="col-md-6">
		<%= form_for(@application, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group" > 
			<div class="col-sm-10 ">
				<%= f.label :description %><br />
				<%= f.text_area :application_body, rows: 10, class: "form-control", placeholder: "What will you bring to this role?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-10 ">
				<%= f.label :YouTube_Code %> <br />
				<%= f.text_field :youtube_url, rows: 10, class: "form-control", placeholder: "dQw4w9WgXcQ", autofocus: true  %>
			</div>
		</div>
		<%= f.hidden_field :job_id, value: params['job_id'], :class => 'form-control' %>
		<%= f.hidden_field :user_id, value: current_user.id, :class => 'form-control' %>
		<div class="form-group" >
			<div class="col-sm-10">
				<%= f.submit "Preview application", class: "btn btn-lg btn-success" %>    
				<%= link_to "Cancel and return to job listings", jobs_path %></div>
		</div>
	<% end %>
	</div>
</div>
