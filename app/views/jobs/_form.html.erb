<% if @job.errors.any? %>
	<h2>The following errors prevented the job listing form being created</h2>
	<ul>
		<% @job.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @job do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :location %><br>
	<%= f.text_field :location %>
</p>
<p>
	<%= f.submit %>
	
</p>
<% end %>

<%= link_to "Back to job listings", jobs_path %>