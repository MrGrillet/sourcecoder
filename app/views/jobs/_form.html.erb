<%= render 'shared/errors', obj: @job %>
<div class="row">
	<div class="col-md-12"> 
		<%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :title %></div>
			<div class="col-sm-10 "> <%= f.text_field :title, class: "form-control", placeholder: "Job Title", autofocus: true %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :description %></div>
			<div class="col-sm-10 "><%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Please provide a brief introduction to the role...", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :the_role %></div>
			<div class="col-sm-10 "><%= f.text_area :the_role, rows: 10, class: "form-control", placeholder: "What will the successful applicant be doing on a daily basis?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :applicant_background %></div>
			<div class="col-sm-10 "><%= f.text_area :applicant_background, rows: 10, class: "form-control", placeholder: "Ideally, what kind of background would the applicant have?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :essential_skills %></div>
			<div class="col-sm-10 "><%= f.text_area :skills_essential, rows: 10, class: "form-control", placeholder: "If any, what would you say the most essential skills are for this role?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :nice_to_have %></div>
			<div class="col-sm-10 "><%= f.text_area :skills_ideal, rows: 10, class: "form-control", placeholder: "What skills would be nice to have but aren't vital?", autofocus: true  %></div>
		</div>
		<div class="form-group" >
			<div class="col-sm-2 contol-label">
				<%= f.label :code_languages %>
			</div>
			<div class="col-sm-10 "> 
				<div class="form-check form-check-inline">
					<%= f.collection_check_boxes :code_language_ids, CodeLanguage.all, :id, :name do |cb| %>
						<% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text } %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :tech_stack %></div>
			<div class="col-sm-10 "><%= f.text_area :tech_stack, rows: 10, class: "form-control", placeholder: "Any additional details about the tech stack?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :benefits %></div>
			<div class="col-sm-10 "><%= f.text_area :benefits, rows: 10, class: "form-control", placeholder: "Any bonuses for working with you?", autofocus: true  %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :location %></div>
			<div class="col-sm-10 "><%= f.text_field :location, class: "form-control", placeholder: "City, Country", autofocus: true %></div>
		</div>
		<div class="form-group" > 
			<div class="col-sm-2 contol-label"><%= f.label :salary %></div>
			<div class="col-sm-10 "> <%= f.text_field :salary, class: "form-control", placeholder: "A whole number with no commas please. Eg: '50000' for Â£50,000", autofocus: true %></div>
		</div>
		<div class="form-group" >
			<div class="col-sm-10 col-sm-offset-2"><%= f.submit class: "btn btn-lg btn-warning" %>    <%= link_to "Cancel and return to job listings", jobs_path %></div>
		</div>
		<% end %>
	</div>
</div>
