<div class="row">
	<div class="col-md-12">	
			<div class="col-md-6">
				<h1><%= User.find(@profile.user_id)[:first_name] %> <%= User.find(@profile.user_id)[:last_name] %></h1>
				<% if @profile.profile_phone_number.present? %>
					<p><%= @profile.profile_phone_number %></p>	
				<% end %>
				<%= User.find(@profile.user_id)[:email] %>
				<p>
					<% if @profile.profile_url.present? %>
						<a href="http://<%= @profile.profile_url %>" target="_blank">website</a> |
					<% end %>
					<% if @profile.profile_github.present? %>
						<a href="http://<%= @profile.profile_github %>" target="_blank">github</a> | 	
					<% end %>
					<% if @profile.profile_twitter.present? %>
						<a href="http://<%= @profile.profile_twitter %>" target="_blank">twitter</a> |		
					<% end %>
					<% if @profile.profile_linkedin.present? %>
						<a href="http://<%= @profile.profile_linkedin %>" target="_blank">linkedin</a>
					<% end %>
				</p>
			</div>
			<div class="col-md-6">
				<% if @profile.profile_image.present? %>
					<img src="<%= @profile.profile_image %>" height="150px" class="rounded" >	
				<% end %>
			</div>
		</div>
	</div>
<% if @profile.profile_youtube.present? %>
	<div class="row">
		<div class="col-md-12">		
			<iframe width="100%" height="520" src="https://www.youtube.com/embed/<%= @profile.profile_youtube %>?rel=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>	
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-md-12">
		<div class="col-md-6">
			<% if @profile.profile_bio.present? %>
				<h3>Personal Profile</h3>
				<p><%= simple_format(@profile.profile_bio) %></p>	
			<% end %>

			<br>
		</div>
			<div class="col-md-6">
		  		<% if @profile.profile_objective.present? %>
				<h3>Objective</h3>
				<p><%= simple_format(@profile.profile_objective) %></p>	
			<% end %>
				<h3>Interested In</h3>
				<p class="top-spacer">
					<a href="#" class="btn btn-xs btn-warning" >Freelance</a>
					<a href="#" class="btn btn-xs btn-success" >Contract</a>
					<a href="#" class="btn btn-xs btn-info" >Permanent</a>
				</p>
			</div>	
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<h2>Experience</h2>
		<p></p>
		<div class="col-md-3">
			<!-- <h4>Focus</h4> -->
			<%= doughnut_chart @data_pie, @pie_chart_options %>
			<!-- Dropdown: confidence: front end, back end, database, = piechart -->
		</div>
		<div class="col-md-9">
				<!-- <h3>Background</h3> -->
			<div class="col-md-4">		
				<h4>Current level</h4>
				<p class="highlight">Junior Developer</p>
				<!-- dropdown: in bootcamp, completed bootcamp, Junior Developer, Mid-level Developer, Senior Developer,  -->
			</div>
			<div class="col-md-4">
				<h4>Years of Experience</h4>
				<p class="highlight">12 Years, <br>03 Months</p>
				<!-- <p>Dropdown: started programming: MM YYYY</p> -->
			</div>
			<div class="col-md-4">
				<h4>Background</h4>
				<p class="highlight">Self Taught</p>
				<!-- dropdown: self taught, CS Degree, Bootcamp, on the job -->
			</div>
		</div>
	</div>
</div>
