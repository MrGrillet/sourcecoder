<div class="row">
	<div class="col-md-12">	
			<div class="col-md-6">
				<h1><%= User.find(@profile.user_id)[:first_name] %> <%= User.find(@profile.user_id)[:last_name] %></h1>
				<% if @profile.profile_phone_number.present? %>
					<p><%= @profile.profile_phone_number %></p>	
				<% end %>
				<%= User.find(@profile.user_id)[:email] %>
				<p>
					<% if @profile.profile_url.present? %>
						<a href="http://<%= @profile.profile_url %>" target="_blank">website</a> |
					<% end %>
					<% if @profile.profile_github.present? %>
						<a href="http://<%= @profile.profile_github %>" target="_blank">github</a> | 	
					<% end %>
					<% if @profile.profile_twitter.present? %>
						<a href="http://<%= @profile.profile_twitter %>" target="_blank">twitter</a> |		
					<% end %>
					<% if @profile.profile_linkedin.present? %>
						<a href="http://<%= @profile.profile_linkedin %>" target="_blank">linkedin</a>
					<% end %>
				</p>
			</div>
			<div class="col-md-6">
				<% if @profile.profile_image.present? %>
					<img src="<%= @profile.profile_image %>" height="150px" class="rounded" >	
				<% end %>
			</div>

		</div>

	</div>

<% if @profile.profile_youtube.present? %>
	<div class="row">
		<div class="col-md-12">		
			<iframe width="100%" height="520" src="https://www.youtube.com/embed/<%= @profile.profile_youtube %>?rel=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>	
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-md-12">
		<div class="col-md-6">
			<% if @profile.profile_bio.present? %>
				<h2>Personal Profile</h2>
				<p><%= simple_format(@profile.profile_bio) %></p>	
			<% end %>

			<br>
		</div>
			<div class="col-md-6">
		  		<% if @profile.profile_objective.present? %>
				<h2>Objective</h2>
				<p><%= simple_format(@profile.profile_objective) %></p>	
			<% end %>
			</div>	
	</div>
</div>
