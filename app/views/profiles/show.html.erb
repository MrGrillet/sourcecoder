<% if @work_history.present? %>
	<div class="row">
		<div class="col-md-12">
			<h2>Projects & Work History</h2>
		</div>
			<% @work_history.each do |job| %>
			<div class="well well-lg">
				<div class="col-md-4">
					<h5><%= job.previous_job_title %></h5>	
				</div>
				<div class="col-md-3">
				    <h5><%= job.previous_company_name %></h5>
				</div>
				<div class="col-md-7">
					<p>
			    	<% @code_languages.each do |lang| %>
	  					<a href="#" class="btn btn-xs btn-primary"><%= lang.name %></a> 
  					<% end %>
  					</p>
			    	<p><%= simple_format(job.previous_job_description) %></p>
			    </div>
			    <div class="col-md-5">
			    	<img src="<%= @profile.profile_wallpaper %>" style="max-width: 410px;" class="rounded" >
  					<hr>
  					<p>
  						<a href="http://<%= @profile.profile_url %>" target="_blank" class="btn pull-left" style="width: 40%" >Website</a> 
	  					<a href="http://<%= @profile.profile_url %>" target="_blank" class="btn pull-right" style="width: 40%" >Github </a>
	  				</p>
			    </div>
			    
			    <div class="col-md-7">
			    	<h5>Aug 09 / Sep 15</h5>
			    </div>
			   
			</div>
		<% end %>
	</div>
<% end %>
<div class="row">
	<div class="col-md-7">
		<% if @profile.profile_additional_notes.present? %>
			<h2>Additional Notes</h2>
			<p><%= simple_format(@profile.profile_additional_notes) %></p>	
		<% end %>
	</div>
</div>
<div class="row">
		<div class="col-md-7">
			<hr />
			<% if current_user.id == @profile.user_id %>
			<p><%= link_to 'Edit', edit_profile_path(@profile), class: "btn btn-info" %> <%= link_to 'back to job listings', jobs_path, class: "btn" %>
			<% end %>
			<% if  !(current_user.id == @profile.user_id) && (admin_user? || employer?) %>
				  <%= link_to 'Back to applications', applications_path, class: "btn" %>
			<% end %>
			</p>
		</div>
	</div>
